<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/input_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.UserCaseInputFragment" />

    <TextView
        android:id="@+id/lat_label_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_dp"
        android:text="Lat:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lat_edit_txt"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_dp"
        android:hint="Latitude"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@id/lat_label_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/long_label_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_dp"
        android:text="Long:"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/lat_edit_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/long_edit_txt"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_dp"
        android:hint="Longitude"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@id/long_label_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/loc_search_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="@dimen/std_dp"
        android:padding="8dp"
        android:src="@drawable/ic_loc_search"
        android:background="@drawable/loc_search_btn_bg"
        app:layout_constraintStart_toEndOf="@id/long_edit_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit_location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_dp"
        android:text="@string/submit_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>